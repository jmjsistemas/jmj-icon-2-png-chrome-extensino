{ "manifest_version": 2,
  "name": "JMJ Icon2PNG",
  "description": "Copy icon!",
  "version": "3.0",

  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "content_scripts": [{
    "matches": ["file:///*"],
    "js": ["content.js"]
  }],
  "browser_action": {
    "default_title": "Test Extension"
  },

  "permissions": ["activeTab"]
}